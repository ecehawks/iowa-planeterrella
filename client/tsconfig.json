{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es5",
    "module": "esnext",
    "skipLibCheck": true,
    "lib": [
      "es7",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "jest",
      "react"
    ],
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "node_modules/@types",
    "public/config"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ]
}
